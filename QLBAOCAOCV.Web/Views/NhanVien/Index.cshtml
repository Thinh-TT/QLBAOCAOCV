@model List<QLBAOCAOCV.DAL.Entities.NhanVien>

<h2>Danh sách nhân viên</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm nhân viên</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Email</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNV</td>
                <td>@item.EmailNV</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNV"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Xóa nhân viên này?');">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>