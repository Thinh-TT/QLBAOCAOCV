@model List<QLBAOCAOCV.DAL.Entities.NhanVien>

<h2>Employee List</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNV</td>
                <td>@item.EmailNV</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNV"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this employee?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>