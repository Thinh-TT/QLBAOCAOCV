@model List<QLBAOCAOCV.DAL.Entities.BaoCao>


@{
    ViewData["Title"] = "Danh sách báo cáo";
}
<a asp-action="Create" class="btn btn-success mb-3">
    + Thêm báo cáo
</a>

<h2>Danh sách báo cáo nhiệt độ – độ ẩm</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-2">
        <label>Từ ngày</label>
        <input type="date" name="fromDate" class="form-control"
               value="@ViewBag.FromDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="col-md-2">
        <label>Đến ngày</label>
        <input type="date" name="toDate" class="form-control"
               value="@ViewBag.ToDate?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="col-md-3">
        <label>Nhân viên</label>
        <select name="maNV" class="form-control" asp-items="ViewBag.NhanViens">
            <option value="">-- Tất cả --</option>
        </select>
    </div>

    <div class="col-md-3">
        <label>Phòng</label>
        <select name="maPhong" class="form-control" asp-items="ViewBag.Phongs">
            <option value="">-- Tất cả --</option>
        </select>
    </div>

    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">
            Tìm kiếm
        </button>
    </div>

    <a asp-action="ExportExcel"
       asp-route-fromDate="@ViewBag.FromDate"
       asp-route-toDate="@ViewBag.ToDate"
       asp-route-maNV="@ViewBag.MaNV"
       asp-route-maPhong="@ViewBag.MaPhong"
       class="btn btn-success ms-2">
        Xuất Excel
    </a>

</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ngày báo cáo</th>
            <th>Nhân viên</th>
            <th>Phòng</th>
            <th>Nhiệt độ</th>
            <th>Độ ẩm</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NgayBC.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.NhanVien?.TenNV</td>
                <td>@item.Phong?.TenPhong</td>
                <td>@item.NhietDo</td>
                <td>@item.DoAm</td>
                <td>
                    @if (!item.TrangThai)
                    {
                        <form asp-action="XacNhan" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.MaBC" />
                            <button type="submit" class="btn btn-sm btn-success"
                                    onclick="return confirm('Xác nhận báo cáo này?');">
                                Xác nhận
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Đã xác nhận</span>
                    }

                    @* @if (!item.TrangThai && (bool)ViewBag.IsManager)
                    {
                        <form asp-action="XacNhan" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@item.MaBC" />
                            <button type="submit" class="btn btn-sm btn-success"
                                    onclick="return confirm('Xác nhận báo cáo này?');">
                                Xác nhận
                            </button>
                        </form>
                    }
                    else if (item.TrangThai)
                    {
                        <span class="text-muted">Đã xác nhận</span>
                    } *@

                </td>
            </tr>
        }
    </tbody>
</table>
