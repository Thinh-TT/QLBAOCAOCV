@model QLBAOCAOCV.DAL.Entities.BaoCao

@{
    ViewData["Title"] = "Add Report";
}

@{
    var tenNV = Context.Session.GetString("TenNV");
}


<div asp-validation-summary="All" class="text-danger"></div>
<h2>Add Temperature & Humidity Report</h2>
<p>
    <strong>Employee: </strong> @tenNV
</p>
<form asp-action="Create" method="post">
    
    <div class="form-group">
        <label>Room</label>
        <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.Phongs">
            <option value="">-- Select Room --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Temperature (°C)</label>
        <input asp-for="NhietDo" class="form-control" />
        <span asp-validation-for="NhietDo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Humidity (%)</label>
        <input asp-for="DoAm" class="form-control" />
        <span asp-validation-for="DoAm" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Notes</label>
        <textarea asp-for="GhiChuBC" class="form-control"></textarea>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Save Report</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>