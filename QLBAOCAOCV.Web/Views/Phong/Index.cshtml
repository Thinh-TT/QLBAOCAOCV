@model List<QLBAOCAOCV.DAL.Entities.Phong>

<h2>Room List</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Add Room</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenPhong</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaPhong" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.MaPhong"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this room?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>