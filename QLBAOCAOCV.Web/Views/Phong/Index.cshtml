@model List<QLBAOCAOCV.DAL.Entities.Phong>

<h2>Danh sách phòng</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm phòng</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên phòng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenPhong</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaPhong" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaPhong"
                       class="btn btn-sm btn-danger"
                       onclick="return confirm('Xóa phòng này?');">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>