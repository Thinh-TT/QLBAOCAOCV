@model IEnumerable<QLBAOCAOCV.DAL.Entities.TaiKhoan>

<h3>Account Management</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a class="btn btn-primary mb-2" asp-action="Create">+ Add Account</a>

<table class="table table-bordered">
    <tr>
        <th>Username</th>
        <th>Employee</th>
        <th>Role</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>

    @foreach (var tk in Model)
    {
        <tr>
            <td>@tk.Username</td>
            <td>@tk.NhanVien?.TenNV</td>
            <td>@tk.Role</td>
            <td>@(tk.IsActive ? "Active" : "Inactive")</td>
            <td>
                <form asp-action="ToggleActive" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@tk.UserId" />
                    <button class="btn btn-warning btn-sm">
                        @(tk.IsActive ? "Disable" : "Enable")
                    </button>
                </form>

                <form asp-action="ResetPassword" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@tk.UserId" />
                    <button class="btn btn-danger btn-sm">
                        Reset Password
                    </button>
                </form>
            </td>
        </tr>
    }
</table>