@{
    var role = Context.Session.GetString("Role");
    var tenNV = Context.Session.GetString("TenNV");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLBAOCAOCV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLBAOCAOCV.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    EnviroMonitor
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- ===== MENU BEN TRAI ===== -->
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        @if (tenNV != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="BaoCao"
                                   asp-action="Index">
                                    Reports
                                </a>
                            </li>
                        }

                        @if (role == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="NhanVien"
                                   asp-action="Index">
                                    Employees
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Phong"
                                   asp-action="Index">
                                    Rooms
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="TaiKhoan"
                                   asp-action="Index">
                                    User Management
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-controller="Home"
                               asp-action="Support">
                                Support
                            </a>
                        </li>
                    </ul>

                    <!-- ===== BEN PHAI (LOGIN / LOGOUT) ===== -->
                    <ul class="navbar-nav ms-auto">
                        @if (tenNV != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    Welcome, <strong>@tenNV</strong>
                                </span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                   asp-controller="Account"
                                   asp-action="Logout">
                                    Sign Out
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Sign In
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; EnviroMonitor – Internal Environmental Monitoring System
            <a asp-controller="Home" asp-action="Support">
                Support
            </a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
